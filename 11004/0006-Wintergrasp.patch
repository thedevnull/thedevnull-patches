+                creature->setFaction(35);
+            }
+            else
+            {
+                creature->RestoreFaction();
+                creature->SetVisible(true);
+            }
+            return false;
+        case CREATURE_SPIRIT_GUIDE:
+            /*Vehicle teleport system*/
+            pMap = creature->GetMap();
+            if (isWarTime())
+            {
+                if (creature->GetAreaId() == 4575) // Select Fortress Spirit
