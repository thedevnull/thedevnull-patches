+    if(!Reason)
+    {
+        sLog->outError("Anti__ReportCheat: Missing Reason parameter!");
+        return false;
+    }
+
+    const char* Player = GetPlayer()->GetName();
+    uint32 Acc = GetPlayer()->GetSession()->GetAccountId();
+    uint32 Map = GetPlayer()->GetMapId();
